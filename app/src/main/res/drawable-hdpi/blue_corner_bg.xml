<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">

        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">

            <corners android:radius="@dimen/_20sdp"></corners>


            <stroke android:width="@dimen/_1sdp" android:color="@color/transparent">

            </stroke>
            <solid android:color="@color/design_default_color_primary"></solid>
            <gradient android:endColor="@color/design_default_color_primary_dark" android:startColor="@color/design_default_color_primary"></gradient>

        </shape>

    </item>

    <item android:state_pressed="true">

        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">

            <corners android:radius="@dimen/_20sdp"></corners>


            <stroke android:width="@dimen/_1sdp" android:color="@color/transparent"></stroke>
            <solid android:color="@color/light_grey">

            </solid>
            <gradient android:endColor="@color/design_default_color_primary_dark" android:startColor="@color/design_default_color_primary"></gradient>

        </shape>

    </item>
</selector>