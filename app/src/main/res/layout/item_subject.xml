<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
        android:scaleType="fitXY"
        android:src="@drawable/video_image"
        android:layout_width="match_parent"
        android:layout_height="140dp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_play_circle_filled_black_24dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView android:layout_width="match_parent"
            android:padding="5dp"
            android:textStyle="bold"
            android:textSize="17sp"
            android:text="Introduction to Digital electronics"
            android:layout_height="match_parent" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="109 Pings"
                android:padding="5sp"
                android:textSize="15sp" />
            <ImageView
                android:layout_width="8dp"
                android:src="@drawable/circle_red"
                android:layout_gravity="center"
                android:layout_height="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="06 Comments"
                    android:padding="5sp"
                    android:textSize="15sp" />
                <ImageView
                    android:layout_width="8dp"
                    android:src="@drawable/circle_red"
                    android:layout_gravity="center"
                    android:layout_height="8dp" />

               <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="560 Views"
                        android:padding="5sp"
                        android:textSize="15sp" />

        </LinearLayout>
    </LinearLayout>


       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="horizontal"
           android:layout_height="wrap_content">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_weight="1"
               android:gravity="left"
               android:padding="5dp"
               android:orientation="horizontal"
               android:layout_height="wrap_content">
               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/ic_wifi_tethering_black_24dp"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Ping"
                   android:textSize="15sp"
                   android:textStyle="bold"
                   android:padding="5dp"
                   />

           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_weight="1"
               android:gravity="center"
               android:padding="5dp"
               android:orientation="horizontal"
               android:layout_height="wrap_content">
               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/ic_comment_icon"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Comments"
                   android:textSize="15sp"
                   android:textStyle="bold"
                   android:padding="5dp"
                   />

           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_weight="1"
               android:gravity="right"
               android:padding="5dp"
               android:orientation="horizontal"
               android:layout_height="wrap_content">
               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/ic_remove_red_eye_black_24dp"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Unread"
                   android:textSize="15sp"
                   android:textStyle="bold"
                   android:padding="5dp"
                   />

           </LinearLayout>



       </LinearLayout>




    </LinearLayout>