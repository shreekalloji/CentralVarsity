<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_250sdp"
    android:layout_height="@dimen/_300sdp"
    android:layout_centerInParent="true"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_300sdp"
        android:background="@drawable/congrautation_bg"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatTextView
            style="@style/custom_textview_bold"
            android:layout_marginTop="@dimen/_40sdp"
            android:text="Congratulations.!!"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sdp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_90sdp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_20sdp"
                android:src="@drawable/ic_blue_button_xx" />

            <com.iprismtech.studentvarsity.customviews.CustomTextViewNormal
                android:id="@+id/tv_marks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="32"
                android:textColor="@color/white"
                android:textSize="@dimen/_50sdp" />

        </RelativeLayout>

        <com.iprismtech.studentvarsity.customviews.CustomTextViewBold
            android:id="@+id/tv_marks_text"
            style="@style/custom_textview_bold"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_10sdp"
            android:text="@string/marks" />

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/background_gray"
            android:text="ok"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp" />
    </LinearLayout>
</LinearLayout>

