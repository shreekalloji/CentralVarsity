<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.ProfileActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/im_back"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/ic_back_arrow" />


            <com.iprismtech.studentvarsity.customviews.CustomTextViewNormal
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_86sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="Profile"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/_20sdp">


                    <com.iprismtech.studentvarsity.customviews.CustomTextViewNormal
                        android:id="@+id/tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:gravity="center"
                        android:text="Hi ,John Doe"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold" />


                    <com.iprismtech.studentvarsity.customviews.CustomTextViewNormal
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-10dp"
                        android:layout_marginBottom="@dimen/_40sdp"
                        android:gravity="center"
                        android:text="Create your profile"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="normal"

                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="-20dp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@drawable/dotted_rectangel"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_addbg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_40sdp"
                        android:drawablePadding="@dimen/_10sdp"
                        android:padding="@dimen/_50sdp"
                        android:text="'+' Add Background image"
                        android:textSize="@dimen/_10sdp"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/iv_banner"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_120sdp"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:layout_marginRight="@dimen/_3sdp"
                        android:visibility="visible" />


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="@dimen/_65sdp"
                        android:layout_height="@dimen/_65sdp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:layout_marginTop="-40dp"
                        android:layout_marginRight="@dimen/_3sdp"
                        android:background="@drawable/dotted_circle"
                        android:visibility="gone" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_addprof"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="-50dp"
                    android:background="@drawable/dotted_circle"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:text="Add Profile Picture" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="-50dp"
                    android:background="@drawable/dotted_circle"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:text="Add profile picture"
                    android:visibility="gone" />


                <android.support.v7.widget.AppCompatTextView
                    style="@style/custom_textview_bold2"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:padding="@dimen/_2sdp"
                    android:text="What would you like to say on your profile"
                    android:textColor="@color/light_black" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:background="@drawable/dotted_rectangel"
                    android:padding="@dimen/_3sdp">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/quotezs"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:padding="@dimen/_2sdp"
                        android:src="@drawable/ic_quotes" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/addbio"
                        style="@style/custom_textview_bold"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_toRightOf="@+id/quotezs"
                        android:text="Add your bio to your profile"
                        android:textSize="@dimen/_13sdp" />

                    <EditText
                        android:id="@+id/et_bio"
                        style="@style/custom_textview_regular"
                        android:layout_below="@+id/addbio"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_toRightOf="@+id/quotezs"
                        android:gravity="start"
                        android:hint="Write here"
                        android:textSize="@dimen/_10sdp" />

                </RelativeLayout>
            </LinearLayout>
        </ScrollView>

        <ImageView
            android:id="@+id/profile_imgNext"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/_15sdp"
            android:padding="@dimen/_2sdp"
            android:src="@drawable/ic_arrow_right" />
    </RelativeLayout>
</LinearLayout>

