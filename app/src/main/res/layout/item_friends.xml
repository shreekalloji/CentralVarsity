<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/lv4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:id="@+id/iv_frd_img"
                    android:layout_marginLeft="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:src="@drawable/no_image"

                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <com.iprismtech.studentvarsity.customviews.CustomTextViewMedium
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_frd_name"
                            android:paddingLeft="@dimen/_10sdp"
                            android:paddingTop="@dimen/_12sdp"
                            android:text="Gail Forcewind"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_11sdp"
                            android:textStyle="bold"

                            />

                        <com.iprismtech.studentvarsity.customviews.CustomTextViewNormal
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/_10sdp"
                            android:text="Central Varsity"
                            android:id="@+id/tv_frd_uni"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="normal" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_22sdp"
                        android:layout_weight="0.16"
                        android:layout_gravity="center"
                        android:gravity="center"

                        android:background="@drawable/bilue_bckgrnd"
                        android:orientation="horizontal">
                        <com.iprismtech.studentvarsity.customviews.CustomTextViewMedium
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_25sdp"
                            android:gravity="center"
                            android:text="Friends"
                            android:textAlignment="center"
                            android:textColor="#69b5ea"
                            android:textSize="@dimen/_8sdp" />
                        <ImageView
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="@dimen/_10sdp"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_keyboard_arrow_down_black_24dp"
                            android:backgroundTint="#69b5ea"/>
                    </LinearLayout>




                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</LinearLayout>