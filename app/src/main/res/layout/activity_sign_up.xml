<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/colorPrimary"
                app:contentInsetEnd="0dp"
                app:contentInsetStart="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/im_back"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:padding="@dimen/_3sdp"
                        android:src="@drawable/ic_back_arrow" />

                    <com.iprismtech.studentvarsity.customviews.CustomTextViewNormal
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:layout_weight="0.9"
                        android:gravity="center"
                        android:text="Sign Up"
                        android:textColor="#ffff"
                        android:textSize="@dimen/_15sdp"

                        />
                </LinearLayout>


            </android.support.v7.widget.Toolbar>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/imgPhn"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_gravity="bottom"
                        android:padding="@dimen/_2sdp"
                        android:src="@drawable/login_mobile" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.iprismtech.studentvarsity.customviews.CustomTextViewNormal
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_4sdp"
                            android:paddingVertical="@dimen/_3sdp"
                            android:text="Mobile Number"
                            android:textColor="@color/colorPrimaryDark" />

                        <com.iprismtech.studentvarsity.customviews.CustomEditTextNormal
                            android:id="@+id/edt_loginUser"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="Mobile number"
                            android:inputType="phone"
                            android:maxLength="10"

                            android:maxLines="1"
                            android:padding="@dimen/_3sdp"
                            android:paddingVertical="@dimen/_5sdp"
                            android:singleLine="true"
                            android:textSize="@dimen/_13sdp" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    style="@style/custom_view_style"
                    android:layout_marginLeft="@dimen/_35sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp">

                    <ImageView
                        android:id="@+id/imgPwd"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:padding="@dimen/_2sdp"

                        android:src="@drawable/rsz_password" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"

                        app:passwordToggleEnabled="true">

                        <com.iprismtech.studentvarsity.customviews.CustomEditTextNormal
                            android:id="@+id/edt_loginpassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"

                            android:background="@null"
                            android:fontFamily="@font/montserrat_regular"
                            android:gravity="center_vertical"
                            android:hint="Password"
                            android:inputType="textPassword"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textSize="@dimen/_13sdp" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <View
                    style="@style/custom_view_style"
                    android:layout_marginLeft="@dimen/_35sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"

                    android:padding="@dimen/_10sdp">

                    <ImageView
                        android:id="@+id/imgcnfPassword"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:padding="@dimen/_2sdp"

                        android:src="@drawable/rsz_password" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"

                        app:passwordToggleEnabled="true">

                        <com.iprismtech.studentvarsity.customviews.CustomEditTextNormal
                            android:id="@+id/edt_logincnfpassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@null"
                            android:fontFamily="@font/montserrat_regular"
                            android:gravity="center_vertical"
                            android:hint="Confirm Password"
                            android:inputType="textPassword"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textSize="@dimen/_13sdp" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <View
                    style="@style/custom_view_style"
                    android:layout_marginLeft="@dimen/_35sdp" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/txtSignup"
                    style="@style/custom_textview_bold"
                    android:layout_margin="@dimen/_15sdp"
                    android:background="@drawable/semi_black_background"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:text="Sign Up"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/_20sdp">


                    <android.support.v7.widget.AppCompatTextView
                        style="@style/custom_textview_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="Already member ?  "
                        android:textColor="@color/light_black"
                        android:textSize="@dimen/_15sdp" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_login"
                        style="@style/custom_textview_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Login "
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_15sdp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>