<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:visibility="gone">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_weight="0.1"
                    android:src="@drawable/ic_back_arrow" />
                <!-- <android.support.v7.widget.AppCompatTextView
                     style="@style/custom_textview_regular"
                     android:padding="@dimen/_8sdp"
                     android:text="@string/ques_straight"
                     android:gravity="center_vertical"
                     android:textColor="@color/white" />-->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_weight="0.5"
                    android:gravity="center_vertical"
                    android:text="@string/ques_straight"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="center"
                    android:layout_weight="0.1"
                    android:src="@drawable/ic_clock" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_weight="0.1"
                    android:gravity="center_vertical"
                    android:text="05:40"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <com.iprismtech.studentvarsity.customviews.CustomTextViewSemiBold
                            android:id="@+id/tv_questionnoof"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_10sdp"
                            android:text="Q.no.02"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13sdp"
                            android:textStyle="bold" />


                        <com.iprismtech.studentvarsity.customviews.CustomTextViewNormal
                            android:id="@+id/tv_question"
                            style="@style/custom_textview_regular"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/_10sdp"
                            android:text="@string/questioninfo"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"></com.iprismtech.studentvarsity.customviews.CustomTextViewNormal>


                    </LinearLayout>

                    <!--  <android.support.v7.widget.AppCompatTextView
                          android:layout_width="match_parent"
                          android:layout_height="@dimen/_45sdp"
                          android:layout_margin="@dimen/_10sdp"
                          android:text="FEMA"
                          android:gravity="center_vertical"
                          android:paddingLeft="@dimen/_20sdp"
                          android:drawableLeft="@drawable/alpha_a"

                          android:background="@drawable/suggestion_background"
                          />
                  -->


                    <LinearLayout
                        android:id="@+id/ll_opt1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_8sdp"
                        android:background="@drawable/normal_background">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/iv_selected_A"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_margin="@dimen/_10sdp"
                            android:background="@drawable/opt_a"
                            android:tint="@color/view_color" />

                        <com.iprismtech.studentvarsity.customviews.CustomTextViewBold
                            android:id="@+id/tv_opt1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="start"
                            android:text="FEMA "
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_opt2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_8sdp"
                        android:background="@drawable/normal_background">

                        <ImageView
                            android:id="@+id/iv_selected_B"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_margin="@dimen/_10sdp"
                            android:background="@drawable/opt_b"
                            android:tint="@color/view_color" />

                        <com.iprismtech.studentvarsity.customviews.CustomTextViewBold
                            android:id="@+id/tv_opt2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="start"
                            android:text="FCCB"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_opt3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_8sdp"
                        android:background="@drawable/normal_background">

                        <ImageView
                            android:id="@+id/iv_selected_C"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_margin="@dimen/_10sdp"
                            android:background="@drawable/opt_c"

                            android:tint="@color/view_color" />

                        <com.iprismtech.studentvarsity.customviews.CustomTextViewBold
                            android:id="@+id/tv_opt3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="start"
                            android:text="NSDL"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_opt4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_8sdp"
                        android:background="@drawable/normal_background">

                        <ImageView
                            android:id="@+id/iv_selected_D"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_margin="@dimen/_10sdp"
                            android:background="@drawable/opt_d" />

                        <com.iprismtech.studentvarsity.customviews.CustomTextViewBold
                            android:id="@+id/tv_opt4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="start"
                            android:text="FIPB"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_opt5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_8sdp"
                        android:background="@drawable/normal_background"
                        android:visibility="visible">

                        <ImageView
                            android:id="@+id/iv_selected_E"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_margin="@dimen/_10sdp"
                            android:background="@drawable/opt_e" />

                        <com.iprismtech.studentvarsity.customviews.CustomTextViewBold
                            android:id="@+id/tv_opt5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:text="None of the above"
                            android:textStyle="bold" />

                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_discuss"
                android:layout_width="0dp"
                android:layout_height="@dimen/_35sdp"
                android:layout_margin="@dimen/_8sdp"
                android:layout_weight="0.33"
                android:background="@drawable/bg_storke">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:paddingLeft="@dimen/_8sdp"
                        android:src="@drawable/ic_discuss" />

                    <com.iprismtech.studentvarsity.customviews.CustomTextViewNormal
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Discuss"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_prev"
                android:layout_width="0dp"
                android:layout_height="@dimen/_35sdp"
                android:layout_margin="@dimen/_8sdp"
                android:layout_weight="0.33"
                android:background="@drawable/bg_storke">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="center"
                        android:paddingLeft="@dimen/_2sdp"
                        android:src="@drawable/ic_previous_arrow" />

                    <com.iprismtech.studentvarsity.customviews.CustomTextViewNormal
                        android:id="@+id/tv_prev"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:paddingRight="@dimen/_4sdp"
                        android:text="Prev"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/_35sdp"
                android:layout_margin="@dimen/_8sdp"
                android:layout_weight="0.33"
                android:background="@drawable/bg_storke">

                <LinearLayout
                    android:id="@+id/ll_next"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center">


                    <com.iprismtech.studentvarsity.customviews.CustomTextViewNormal
                        android:id="@+id/tv_next"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:paddingLeft="@dimen/_5sdp"
                        android:text="Next"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="center"
                        android:paddingLeft="@dimen/_2sdp"
                        android:src="@drawable/ic_next_arrow" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>