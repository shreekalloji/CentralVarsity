<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/_120sdp"
    android:layout_gravity="center_horizontal"
    android:layout_marginHorizontal="@dimen/_2sdp"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="@dimen/_80sdp"
        android:layout_height="match_parent"
        android:layout_marginVertical="@dimen/_2sdp"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_60sdp"
            android:layout_gravity="center"
            >


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ll_item_grp"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:src="@color/primary_light" />


            <ImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/_10sdp"
                android:src="@drawable/ic_group" />
        </RelativeLayout>


        <com.iprismtech.studentvarsity.customviews.CustomTextViewBold
            android:id="@+id/tv_grp_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Central Varcity"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold" />

        <com.iprismtech.studentvarsity.customviews.CustomTextViewNormal
            android:id="@+id/tv_numbers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_2sdp"
            android:gravity="center"
            android:text="50 Members"
            android:textSize="@dimen/_9sdp" />
    </LinearLayout>
</LinearLayout>